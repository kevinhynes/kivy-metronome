<Metronome>:
    needle_angle: 0
    canvas:
        Color:
            rgba: (1, 1, 1, 0.5)
        Rectangle:
            size: self.size
            pos: self.pos
        PushMatrix
        Rotate:
            angle: root.needle_angle
            axis: 0, 0, 1
            origin: [self.width*0.5, self.height*0.2]
        Color:
            rgba: (0, 0, 0, 0.5)
        Rectangle:
            size: [self.width * 0.05, self.height*0.75]
            pos: [self.width * 0.5 - self.width * 0.025, self.height*0.2]
        PopMatrix

    BoxLayout:
        id: buttonbar
        size_hint: [1, 0.2]
        pos_hint: {"center_x": 0.5, "bottom": 0}
        Button:
            text: "Play"
            on_press: root.play()
        Button:
            text: "Stop"
            on_press: root.stop()